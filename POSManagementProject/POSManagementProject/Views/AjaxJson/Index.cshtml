@model IEnumerable<SelectListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ajax-Json</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("DepartmentLabel", "Department", htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("DepartmentId",Model, new { @class = "form-control", @id = "departmentId" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("GroupLabel", "Group", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="groupId" class="form-control"><option selected>---Select---</option></select>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("StudentLabel", "Student", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="studentId" class="form-control"><option selected>---Select---</option></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/Project/AjaxJson.js"></script>
}
